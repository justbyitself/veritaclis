{
  "name": "@justbyitself/veritaclis",
  "version": "0.3.0",
  "description": "Veritaclis CLI tool",
  "exports": {
    ".": "./cli.js"
  },
  "tasks": {
    "veritaclis": "deno run -A cli.js",
    "compile:linux": "deno compile -A --output=bin/veritaclis-x86_64-linux cli.js",
    "compile:mac": "deno compile -A --output=bin/veritaclis-x86_64-macos cli.js",
    "compile:windows": "deno compile -A --output=bin/veritaclis-x86_64-windows.exe --target x86_64-pc-windows-msvc cli.js",
    "compile": "deno task compile:linux && deno task compile:mac && deno task compile:windows"
  },
  "imports": {
    "asserts": "jsr:@std/testing@0.203.0/asserts"
  }
}
